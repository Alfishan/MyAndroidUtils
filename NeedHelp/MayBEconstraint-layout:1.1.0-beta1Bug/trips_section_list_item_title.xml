<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cell_title"
                                    app:cardBackgroundColor="@color/bgContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:foreground="?android:selectableItemBackground"
                                    app:cardCornerRadius="@dimen/explorer_card_corner_radius"
                                    app:cardElevation="1.0dip">

<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
            android:layout_height="155dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/view"
            android:background="@color/bgTitleLeft"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="08:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_lable"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/date_lable"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="08:00 PM"
            android:textAppearance="@style/TitleSmallerRegular"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="2dp"
            android:textColor="@color/cellTitleLeftText"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            android:id="@+id/date_lable"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginTop="8dp"
            tools:text="Today"
            android:textAppearance="@style/TitleSmallerRegular"
            android:textColor="@color/cellTitleLeftText"
            android:text="Today"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

    <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_from_to_blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/from_to_image"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            android:layout_marginStart="8dp"/>

    <View
            android:background="@color/cinder"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline5"
            app:layout_constraintLeft_toRightOf="@+id/from_to_image"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/from_to_divider"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            android:layout_width="0dp"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline5"
            app:layout_constraintGuide_end="1dp"
            android:orientation="vertical"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="W 79th St, NY, 10024"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/origin_address_lable"
            android:layout_marginBottom="3dp"
            android:textAppearance="@style/TitleNormalDemiBold"
            app:layout_constraintBottom_toTopOf="@+id/from_to_divider"
            app:layout_constraintLeft_toRightOf="@+id/from_to_image"
            android:layout_marginLeft="8dp"
            tools:text="W 79th St, NY, 10024"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="W 139th St, NY, 10030"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destination_address_lable"
            android:textAppearance="@style/TitleNormalDemiBold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/from_to_divider"
            app:layout_constraintLeft_toRightOf="@+id/from_to_image"
            android:layout_marginLeft="8dp"
            tools:text="W 139th St, NY, 10030"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            app:layout_constraintGuide_begin="33dp"
            android:orientation="horizontal"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline7"
            app:layout_constraintGuide_begin="91dp"
            android:orientation="horizontal"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_title_lable"
            app:layout_constraintRight_toLeftOf="@+id/guideline5"
            android:layout_marginRight="7dp"
            android:textAppearance="@style/TitleSmallerRegular"
            tools:text="Weight"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginTop="0dp"
            android:textColor="@color/cellTitleRightProperty"
            android:text="Weight"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_value_lable"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/weight_title_lable"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/Body1LargerDemiBold"
            tools:text="20 KG"
            app:layout_constraintVertical_bias="0.19"
            android:textColor="@color/cellTitleRightProperty"
            android:text="20 KG"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textAppearance="@style/TitleSmallerRegular"
            tools:text="Weight"
            app:layout_constraintRight_toLeftOf="@+id/guideline9"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginTop="0dp"
            android:textColor="@color/cellTitleRightProperty"
            android:text="Weight"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textAppearance="@style/TitleSmallerRegular"
            tools:text="Weight"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline10"
            android:textColor="@color/cellTitleRightProperty"
            android:text="Weight"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/weight_title_lable"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/Body1LargerDemiBold"
            tools:text="20 KG"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.19999999"
            app:layout_constraintRight_toLeftOf="@+id/guideline10"
            android:textColor="@color/cellTitleRightProperty"
            android:text="20 KG"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/weight_title_lable"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/Body1LargerDemiBold"
            tools:text="20 KG"
            app:layout_constraintRight_toLeftOf="@+id/guideline9"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.19999999"
            android:textColor="@color/cellTitleRightProperty"
            android:text="20 KG"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline9"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7556818"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>